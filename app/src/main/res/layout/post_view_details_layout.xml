<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#57a3f1"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        app:cardElevation="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
            >
                <TextView
                    android:id="@+id/tv_postName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Name of Post"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-light"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"/>
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Email@gmail.com"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-light"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"/>
                <TextView
                    android:id="@+id/tvphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Email@gmail.com"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"/>
                <TextView
                    android:id="@+id/tv_skypeId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Email@gmail.com"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-light"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"/>
                <TextView
                    android:id="@+id/tv_telegram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Email@gmail.com"
                    android:textSize="16dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"/>
                <TextView
                    android:id="@+id/tv_cast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Email@gmail.com"
                    android:textSize="16dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"/>
                <TextView
                    android:id="@+id/call_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Email@gmail.com"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-light"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"/>
                <TextView
                    android:id="@+id/tv_discription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Email@gmail.com"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-light"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"/>
                <TextView
                    android:id="@+id/tv_postby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Email@gmail.com"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-light"
                    />
                <View
                    android:id="@+id/view_pby"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/main"
                    android:text="under review"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:foreground="?selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="2dp"
                android:src="@drawable/ic_baseline_edit_24"/>

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:foreground="?selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="2dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_baseline_delete_24"
                app:tint="@color/white" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>